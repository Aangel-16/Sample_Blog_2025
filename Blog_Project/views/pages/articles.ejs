<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>ARTICLE PAGE</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
  
  <!-- External Custom CSS -->
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>

 <!-- Header -->  
<%- include('../partials/header') %>

<div class="container-fluid">
  <div class="row">
    
    <!-- Sidebar -->
    <div class="col-md-3 bg-light vh-100">
      <%- include('../partials/menu') %>
    </div>

    <!-- Main Content Area -->
    <div class="col-md-9 p-5">
      <h2 class="text-success mb-4">All Articles</h2>

      <!-- Displaying all articles -->
      <% articles.forEach(article => { %>
        <div class="shadow p-4 mb-4 bg-white rounded">
          <h5><strong><%= article.title %></strong></h5>
          <p class="mb-1 text-muted">
            by <%= article.author %> on <%= new Date(article.date).toLocaleDateString() %>
          </p>
          <a href="/details/<%= article._id %>">Read More...</a>
          
          <div class="mt-2">
            <% article.tags.forEach(tag => { %>
              <span class="badge rounded-pill bg-light text-dark border me-1"><%= tag.toUpperCase() %></span>
            <% }) %>
          </div>
        </div>
      <% }) %>

    </div> <!-- End of Main Content Area -->
  </div> <!-- End of Row -->
</div> <!-- End of Container -->

<!-- Footer -->
<%- include('../partials/footer') %>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
